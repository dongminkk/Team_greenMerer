<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right">

    <LinearLayout
        android:layout_width="500px"
        android:layout_height="340px"
        android:layout_marginRight="30px"
        android:background="@drawable/timeline_summary_radius"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="500px"
            android:layout_height="80px"
            android:layout_marginTop="3px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/timeline_co2_emission"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="30px"
                android:text="하루 CO2 배출량"
                android:textColor="#78AFAF"
                android:textSize="35px"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/timeline_detail_btn"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_marginTop="30px"
                android:layout_marginLeft="100px"
                app:srcCompat="@drawable/arrow_forward_ios_fill0_wght400_grad0_opsz48" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/day_co2"
                android:layout_width="wrap_content"
                android:layout_height="80px"
                android:layout_marginLeft="20px"
                android:text="0"
                android:textSize="70px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10px"
                android:text=" g" />

        </LinearLayout>

        <TextView
            android:id="@+id/timeline_timekm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="30px"
            android:text="하루 누적 거리"
            android:textColor="#78AFAF"
            android:textSize="35px"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/day_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="0"
                android:textSize="55px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" km" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>